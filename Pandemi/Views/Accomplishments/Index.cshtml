@model IEnumerable<Pandemi.Models.Accomplishment>
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager
@{
    ViewData["Title"] = "Index";
}
@{ var user = await UserManager.GetUserAsync(User);}

<h1>@(user.FamilyName) Accomplishments</h1>
<h1>Way to Go !</h1>

<p>
    <a asp-action="Create">+ Add New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-success">

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Accomplishment
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyMember.FirstName)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-success">

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyMember.FirstName)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<h3>Pick a Family Member to just view their accomplishments</h3>

